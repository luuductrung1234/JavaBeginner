    "inputs": [
        {
            "id": "appInput",
            "type": "pickString",
            "options": ["0", "1", "2", "3", "4", "5"],
            "default": "0",
            "description": "Java application startup input parameter"
        },
        {
            "id": "dependsOn",
            "type": "pickString",
            "options": ["build", "none"],
            "default": "none",
            "description": "task dependency"
        },
        {
            "id": "firstParamter",
            "type": "promptString",
            "default": "LearnSomething",
            "description": "first paramter for bash script"
        },
        {
            "id": "classPath",
            "type": "promptString",
            "default": "LearnSerialization",
